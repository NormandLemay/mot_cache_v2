<h1>Listing lexiques</h1>



<%= form_tag lexiques_path, :method => 'get', :id => "lexiques_search" do %>
    <p>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", :name => nil %>
    </p>
    <div id="lexiques">
        <%= render 'lexiques' %>
    </div>
<% end %>


<%= link_to 'New Lexique', new_lexique_path %>
